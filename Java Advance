// File: InvalidAgeForVoterException.java
class InvalidAgeForVoterException extends RuntimeException {
    public InvalidAgeForVoterException(String message) {
        super(message);
    }
}

// File: Voter.java
class Voter {
    private int voterId;
    private String name;
    private int age;

    // Parameterized Constructor
    public Voter(int voterId, String name, int age) {
        // Check age condition
        if (age < 18) {
            // Throw an UNCHECKED exception
            throw new InvalidAgeForVoterException("Invalid age for voter");
        }

        // Initialize attributes if validation passes
        this.voterId = voterId;
        this.name = name;
        this.age = age;
        System.out.println("Voter created successfully: " + name + " (Age: " + age + ")");
    }
}

// File: VoterTest.java
public class VoterTest {
    public static void main(String[] args) {
        // --- Test Cases ---
        
        // 1. Valid Voter
        try {
            Voter v1 = new Voter(501, "Eliza", 35);
        } catch (InvalidAgeForVoterException e) {
            System.out.println("Exception caught: " + e.getMessage());
        }
        
        System.out.println("\n---");
        
        // 2. Invalid Voter (Age 17)
        try {
            Voter v2 = new Voter(502, "Frank", 17);
        } catch (InvalidAgeForVoterException e) {
            System.out.println("Exception caught: " + e.getMessage());
        }
    }
}

