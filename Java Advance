// File: StudentGrades.java
import java.util.HashMap;
import java.util.Map;

public class StudentGrades {
    // HashMap to store student names (String) and grades (Integer)
    private Map<String, Integer> gradeMap;

    public StudentGrades() {
        // Initialize the HashMap
        this.gradeMap = new HashMap<>();
    }

    // Method to add a new student/update grade
    public void addStudent(String name, Integer grade) {
        gradeMap.put(name, grade);
        System.out.println(name + "'s grade (" + grade + ") has been added/updated.");
    }

    // Method to remove a student
    public void removeStudent(String name) {
        if (gradeMap.remove(name) != null) {
            System.out.println(name + " has been removed from the system.");
        } else {
            System.out.println("Error: Student " + name + " not found.");
        }
    }

    // Method to display a student's grade by name
    public void displayGrade(String name) {
        // Use getOrDefault to provide a clean message if the student isn't found
        Integer grade = gradeMap.get(name);
        
        if (grade != null) {
            System.out.println("The grade for " + name + " is: " + grade);
        } else {
            System.out.println("Student " + name + " is not in the system.");
        }
    }

    public static void main(String[] args) {
        StudentGrades system = new StudentGrades();

        // 1. Add students
        system.addStudent("Ramesh", 85);
        system.addStudent("Priya", 92);
        system.addStudent("Sanjay", 78);
        
        System.out.println("\n--- Operations ---");

        // 2. Display a student's grade
        system.displayGrade("Priya");
        system.displayGrade("Unknown Student"); // Test for non-existent student

        // 3. Remove a student
        system.removeStudent("Sanjay");

        // 4. Display again to confirm removal
        system.displayGrade("Sanjay");
        
        // 5. Update a student's grade
        system.addStudent("Ramesh", 88); // Ramesh's grade updated
        system.displayGrade("Ramesh");
    }
}

