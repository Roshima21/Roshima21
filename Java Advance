// File: WeekdayArray.java
import java.util.Scanner;

public class WeekdayArray {
    public static void main(String[] args) {
        // Array to store weekday names
        String[] weekdays = {"Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"};
        
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter the day position (0 for Sunday, 1 for Monday, ..., 6 for Saturday):");
        
        try {
            // Read user input
            int index = scanner.nextInt();
            
            // Access the array element. This line might throw ArrayIndexOutOfBoundsException.
            String dayName = weekdays[index];
            
            // If no exception, print the day name
            System.out.println("The day name at position " + index + " is: " + dayName);
            
        } catch (ArrayIndexOutOfBoundsException e) {
            // Handle the specific exception when index is outside [0, 6]
            System.out.println("Error: The day position must be between 0 and 6.");
            // Optional: Print the original message for debugging
            // System.out.println("Detailed Error: " + e.getMessage());
            
        } catch (java.util.InputMismatchException e) {
            // Handle the case where the user enters non-integer input (e.g., a letter)
            System.out.println("Error: Invalid input. Please enter a whole number for the day position.");
            
        } finally {
            // Close the scanner
            scanner.close();
        }
    }
}

