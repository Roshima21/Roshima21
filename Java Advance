// File: StackExample.java
import java.util.Stack;

public class StackExample {
    private Stack<Integer> stack;

    public StackExample() {
        this.stack = new Stack<>();
    }

    // a. Function for pushing elements onto the stack
    public void pushElement(Integer element) {
        stack.push(element); // push() method adds element to the top
        System.out.println("Pushed: " + element);
    }

    // b. Function for popping elements from the stack
    public Integer popElement() {
        if (stack.isEmpty()) {
            System.out.println("Stack is empty. Cannot pop.");
            return null; // Return null if stack is empty
        }
        Integer element = stack.pop(); // pop() method removes and returns the element at the top
        System.out.println("Popped: " + element);
        return element;
    }
    
    public void displayStack() {
        System.out.println("Current Stack: " + stack);
    }

    public static void main(String[] args) {
        StackExample stackOps = new StackExample();
        
        // Push operations
        stackOps.pushElement(10);
        stackOps.pushElement(20);
        stackOps.pushElement(30);
        stackOps.displayStack();

        System.out.println("\n---");

        // Pop operations
        stackOps.popElement();
        stackOps.popElement();
        stackOps.displayStack();
        
        System.out.println("\n---");

        // Pop the last element
        stackOps.popElement();
        
        // Attempt to pop from an empty stack
        stackOps.popElement();
    }
}
