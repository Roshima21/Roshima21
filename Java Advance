// File: StudentManagementSystem.java
public class StudentManagementSystem {
    public static void main(String[] args) {
        // --- Test Cases ---
        
        // 1. Valid Student
        try {
            Student s1 = new Student(101, "Alice Smith", 19, "CS");
        } catch (AgeNotWithinRangeException | NameNotValidException e) {
            System.out.println("Exception caught: " + e.getMessage());
        }
        
        System.out.println("\n---");
        
        // 2. Invalid Age (Too high: 22)
        try {
            Student s2 = new Student(102, "Bob Johnson", 22, "IT");
        } catch (AgeNotWithinRangeException | NameNotValidException e) {
            System.out.println("Exception caught: " + e.getMessage());
        }
        
        System.out.println("\n---");
        
        // 3. Invalid Name (Contains numbers: "Charlie123")
        try {
            Student s3 = new Student(103, "Charlie123", 17, "ECE");
        } catch (AgeNotWithinRangeException | NameNotValidException e) {
            System.out.println("Exception caught: " + e.getMessage());
        }
        
        System.out.println("\n---");
        
        // 4. Invalid Name (Contains special symbols: "David@")
        try {
            Student s4 = new Student(104, "David@", 20, "ME");
        } catch (AgeNotWithinRangeException | NameNotValidException e) {
            System.out.println("Exception caught: " + e.getMessage());
        }
    }
}

